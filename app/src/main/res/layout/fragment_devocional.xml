<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.devocional.DevocionalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/devotionalImageView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:contentDescription="Bueno holaaa"
                android:scaleType="centerCrop"
                android:src="@drawable/degradado"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/versiculoEditText"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/versiculoEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:hint="Versículo"
                android:padding="16dp"
                android:minHeight="150dp"
                android:gravity="top|start"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/devotionalImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/oracionEditText"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/oracionEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:hint="Oración"
                android:padding="16dp"
                android:minHeight="150dp"
                android:gravity="top|start"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/versiculoEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/reflexionEditText"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/reflexionEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:hint="Reflexión"
                android:padding="16dp"
                android:minHeight="150dp"
                android:gravity="top|start"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/oracionEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
