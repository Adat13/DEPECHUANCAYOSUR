<!-- list_item_inscrito.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/marcoedit"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:typeface="serif"

            android:text="Nombre" />


        <!-- activity_mis_inscritos.xml -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonQR"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Ver QR"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/boton_qr"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/textViewMontoAbonado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monto Abonado"
                android:textColor="@color/black"
                android:layout_weight="1"

                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonViewVoucher"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:layout_weight="0.5"



                android:text="Ver Voucher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firtsInstallmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textViewPrimeraCuota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"



                android:text="Primera Cuota" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonUploadVoucher1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:textSize="12dp"
                android:text="Cancelar"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondInstallmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textViewSegundaCuota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Segunda Cuota" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonUploadVoucher2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:textSize="12dp"


                android:text="Cancelar"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdInstallmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textViewTerceraCuota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Tercera Cuota" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonUploadVoucher3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:textSize="12dp"

                android:text="Cancelar"

                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
