<resources>
    <style name="DigitalText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/digital</item>
        <item name="android:textColor">#00C313</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

        <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Rounded">
            <item name="boxBackgroundMode">outline</item>
            <item name="boxCornerRadiusTopStart">50dp</item>
            <item name="boxCornerRadiusTopEnd">50dp</item>
            <item name="boxCornerRadiusBottomEnd">50dp</item>
            <item name="boxCornerRadiusBottomStart">50dp</item>
        </style>

        <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Spinner Style -->
    <style name="CustomSpinnerStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">@color/verde_verificado</item>
        <item name="android:popupBackground">@color/GrisMedio</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Custom Spinner Dropdown Item Style -->
    <style name="CustomSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/verde_verificado</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>





</resources>


